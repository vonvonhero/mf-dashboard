{
  "name": "mf-dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "corepack enable pnpm",
    "dev": "turbo dev",
    "dev:demo": "turbo dev:demo",
    "build": "turbo build",
    "build:demo": "turbo build:demo",
    "generate:demo-insights": "pnpm --filter @mf-dashboard/analytics generate:demo-insights",
    "db:clean": "rm -f data/moneyforward.db data/moneyforward.db-wal data/moneyforward.db-shm",
    "db:dev": "pnpm --filter @mf-dashboard/crawler dev:scrape",
    "test": "turbo test",
    "test:e2e:web": "turbo test:e2e --filter=@mf-dashboard/web",
    "test:e2e:crawler": "turbo test:e2e --filter=@mf-dashboard/crawler",
    "test:e2e:real": "pnpm --filter @mf-dashboard/db-e2e test",
    "typecheck": "turbo typecheck",
    "lint": "oxlint --type-aware --fix",
    "format": "oxfmt",
    "knip": "knip"
  },
  "devDependencies": {
    "knip": "5.85.0",
    "lefthook": "2.1.1",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "oxlint-tsgolint": "0.15.0",
    "tsx": "4.21.0",
    "turbo": "2.8.11"
  },
  "packageManager": "pnpm@10.30.2"
}
