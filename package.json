{
  "name": "moneyforward-daily-action",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "corepack enable pnpm",
    "dev": "turbo dev",
    "dev:demo": "turbo dev:demo",
    "build": "turbo build",
    "build:demo": "turbo build:demo",
    "generate:demo-insights": "pnpm --filter @moneyforward-daily-action/analytics generate:demo-insights",
    "db:clean": "rm -f data/moneyforward.db data/moneyforward.db-wal data/moneyforward.db-shm",
    "db:dev": "pnpm --filter @moneyforward-daily-action/crawler dev:scrape",
    "test": "turbo test",
    "test:e2e:web": "turbo test:e2e --filter=@moneyforward-daily-action/web",
    "test:e2e:crawler": "turbo test:e2e --filter=@moneyforward-daily-action/crawler",
    "test:e2e:real": "pnpm --filter @moneyforward-daily-action/db-e2e test",
    "typecheck": "turbo typecheck",
    "lint": "oxlint --type-aware --fix",
    "format": "oxfmt",
    "knip": "knip"
  },
  "devDependencies": {
    "knip": "5.83.1",
    "lefthook": "2.1.0",
    "oxfmt": "0.31.0",
    "oxlint": "1.46.0",
    "oxlint-tsgolint": "0.12.0",
    "tsx": "4.21.0",
    "turbo": "2.8.6"
  },
  "packageManager": "pnpm@10.29.3"
}
